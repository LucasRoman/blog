<h2>Sign up</h2>

<%= form_for @user do |f| %>
  
  <%if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> does not create this user:</h2>
      
      <ul>
      
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      
      </ul>

    </div>
  <% end %>

  <%= f.label :email %><br/>
  <%= f.email_field :email %><br/>

  <%= f.label :password %><br/>
  <%= f.password_field :password %><br/>

  <%= f.label :password_confirmation %><br/>
  <%= f.password_field :password_confirmation %><br/>

  <%= f.submit "Sign up" %>

<% end %>