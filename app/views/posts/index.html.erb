 <FONT FACE="verdana" SIZE=5>
<h1 align=center>Lista de posts</h1>
</FONTFACE>

<table align=center>
	<tr>
		<th>Título</th>
		<th>Texto</th>
		<th colspan="2"></th>
	</tr>

	<% @posts.each do |post| %>
		<tr>
			<td><%= post.title.capitalize %></td>
			<td><%= post.body %></td> 
			<td><%= link_to 'Show',post_path(post) %></td>
			<td><%= link_to 'Edit', edit_post_path(post) %></td>
			<td><%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: '¿Está seguro que desea borrar este post?'} %></td>
		</tr>
	<% end %>
</table>



